generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//todo:in this i also have to make a user table that contains the id,firstname,lastname,email,password
//that will help to authenticate the user 
enum DeployementStatus {
  NOT_STARTED
  QUEUED
  IN_PROGRESS
  READY
  FAIL
}

model Project {
  id           String        @id @default(uuid())
  name         String
  gitURL       String        @map("git_url")
  subDomain    String        @map("subdomain")
  customDomain String?       @map("custom_domain")
  Deployement  Deployement[]
  userId       String
  user         User           @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Deployement {
  id        String            @id @default(uuid())
  project   Project           @relation(fields: [projectId], references: [id])
  projectId String            @map("project_id")
  status    DeployementStatus @default(NOT_STARTED)
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt
}

model User {
  id        String      @id @default(uuid())
  firstname String
  lastname  String
  email     String      @unique
  password  String
  projects  Project[]
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}